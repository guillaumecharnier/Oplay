{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="w-75">
            <h1 class="text-center mb-4">Game</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th style="width: 20%">Id</th>
                        <td>{{ game.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ game.name }}</td>
                    </tr>
                    <tr>
                        <th>Release Date</th>
                        <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{ game.createdAt ? game.createdAt|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Picture</th>
                        <td>{{ game.picture }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ game.price }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ game.description }}</td>
                    </tr>
                    <tr>
                        <th>Editor</th>
                        <td>{{ game.editor }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3">
                <a href="{{ path('app_game_index') }}" class="btn btn-primary btn-sm mr-2">Back to list</a>
                <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
            </div>

            {{ include('backoffice/game/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
