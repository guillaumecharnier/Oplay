{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.picture }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"class="btn btn-primary mb-2">Détail</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"class="btn btn-warning mb-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}"class="btn btn-primary mb-2">Crée une nouvelle catégorie</a>
{% endblock %}
