{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="w-75">
            <h1 class="text-center mb-4">Category index</h1>
            <div class="text-center mt-3">
                <a href="{{ path('app_category_new') }}" class="btn btn-success">Create New Category</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                        {{dump(category.picture)}}
                            {% if category.picture %}
                                <img src="{{ asset(category.picture) }}" class="d-block w-10" alt="{{ category.name }}">
                                {# <img src="{{ asset('assets/uploads/categories' ~ category.picture) }}" class="img-fluid" alt="{{ category.name }}"> #}
                            {% else %}
                                No picture
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
