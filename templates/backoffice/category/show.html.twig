{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Category Details</h1>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th style="width: 20%">Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category.name }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>
                                {% if category.picture %}
                                    <img src="{{ asset(category.picture) }}" class="d-block w-10" alt="{{ category.name }}">
                                {% else %}
                                    No picture
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-3">
                    <a href="{{ path('app_category_index') }}" class="btn btn-primary btn-sm mb-2">Back to List</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary btn-sm mb-2 ">Edit</a>
                </div>

                {{ include('backoffice/category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
