{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Theme</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th style="width: 20%">Id</th>
                            <td>{{ theme.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ theme.name }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-3">
                    <a href="{{ path('app_back_theme_index') }}" class="btn btn-primary btn-sm mb-2">Back to list</a>
                    <a href="{{ path('app_back_theme_edit', {'id': theme.id}) }}" class="btn btn-secondary btn-sm mb-2">Edit</a>
                </div>

                <div class="text-center mt-3">
                    {{ include('backoffice/theme/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
