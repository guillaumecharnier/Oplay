{% extends 'base.html.twig' %}

{% block title %}Tag Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center mb-4">Tag Details</h1>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th style="width: 20%">Id</th>
                                <td>{{ tag.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ tag.name }}</td>
                            </tr>
                            <tr>
                            <th>Picture</th>
                            <td>
                                {% if tag.picture %}
                                    <img src="{{ asset(tag.picture) }}" class="d-block w-10" alt="{{ tag.name }}">
                                {% else %}
                                    No picture
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-3">
                    <a href="{{ path('app_tag_index') }}" class="btn btn-primary btn-sm mb-2">Back to List</a>
                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-secondary btn-sm mb-2">Edit</a>
                </div>

                <div class="text-center mt-3">
                    {{ include('backoffice/tag/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
