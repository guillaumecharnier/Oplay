{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="w-50">
            <h1 class="text-center">Tag</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ tag.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ tag.name }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3">
                <a href="{{ path('app_back_tag_index') }}" class="btn btn-secondary">back to list</a>
                <a href="{{ path('app_back_tag_edit', {'id': tag.id}) }}" class="btn btn-primary">edit</a>
            </div>

            <div class="text-center mt-3">
                {{ include('backoffice/tag/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
