{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Order Details</h1>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th style="width: 20%">Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ order.status }}</td>
                        </tr>
                        <tr>
                            <th>User</th>
                            <td>{{ order.user.nickname }}</td>
                        </tr>
                        <tr>
                            <th>Games</th>
                            <td>
                                <ul>
                                            <li>
                                                <h5> Order n° {{ order.id }} </h5>
                                                {% for gameOrder in order.gameOrders %}
                                                    <div class="card mb-3">
                                                        <div class="card-body">
                                                            <h5 class="card-title"> Game Order n° {{ gameOrder.id }} - {{ gameOrder.game.id }} </h5>
                                                            <p class="card-text">{{ gameOrder.game.name }} - {{ gameOrder.game.price }} €</p>
                                                            {% if order.status != 'pending' %}
                                                                {% if gameOrder.game.userGameKeys|length > 0 %}
                                                                    <p class="card-text">
                                                                        Key: {{ gameOrder.game.userGameKeys[0].gameKey|mask_key }}
                                                                    </p>
                                                                {% else %}
                                                                    <p class="card-text">No key available</p>
                                                                {% endif %}
                                                                Issues With user key ? -> <a href="{{ path('app_game_generate_key_order', {'id': gameOrder.game.id}) }}" class="btn btn-warning btn-sm mb-2">Generate New Key</a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </li>
                                        </ul>
                                    <tr>
                            <th>Total</th>
                                <td>{{ order.total }} €</td>
                            </tr>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-3">
                    <a href="{{ path('app_order_main') }}" class="btn btn-primary btn-sm mb-2">Back to List</a>
                </div>
                <div class="text-center mt-3">
                    {{ include('backoffice/order/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
