{# templates/order/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}€</td>
            </tr>
            <tr>
                <th>Games</th>
                <td>
                    <ul>
                        {% for game in order.games %}
                            <li>{{ game.name }} - {{ game.price }} €</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}" class="btn btn-primary mb-2">Retour à la liste</a>

    {{ include('backoffice/order/_delete_form.html.twig') }}
{% endblock %}
