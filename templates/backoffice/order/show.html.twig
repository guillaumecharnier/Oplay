{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Order Details</h1>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th style="width: 20%">Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ order.status }}</td>
                        </tr>
                        <tr>
                            <th>Total</th>
                            <td>{{ order.total }} €</td>
                        </tr>
                        <tr>
                            <th>Games</th>
                            <td>
                                <ul>
                                    
                                        {% for gameOrder in order.gameOrders %}
                                            <li>
                                                {{ gameOrder.game.name }} - {{ gameOrder.game.price }} € 
                                                <span class="badge badge-primary" style="background-color: #007bff; color: white; padding: 5px 10px; border-radius: 10px;">{{ gameOrder.quantity }}x</span>
                                            </li>
                                        {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-3">
                    <a href="{{ path('app_order_main') }}" class="btn btn-primary btn-sm mb-2">Back to List</a>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('app_order_main') }}" class="btn btn-primary btn-sm mb-2">Generate Key</a>
                </div>
                <div class="text-center mt-3">
                    {{ include('backoffice/order/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
